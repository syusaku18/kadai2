<html>
  <body>

    <h1>Editing Book</h1>
    <% if @book.errors.any? %>
      <div class="error">
        <h2 class="error_message"><%= @book.errors.count %> error prohibited this book from being saved:</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= form_with model: @book do |f|%>
      <div>
        <span>Title</span>
        <%= f.text_field :title %>
      </div>
      <div>
        <span>Body</span>
        <%= f.text_area :body %>
      </div>
      <div><%= f.submit 'Update Book'%></div>
    <%end%>
    <span>
      <%= link_to "Show", book_path(@book.id)%>
      |
      <%= link_to "Back", books_path%>
    </span>


  </body>


</html>